<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Heather.App">
  <Application.Styles>
    <!-- Include Fluent theme resources directly to avoid XAML property mismatch across versions -->
    <StyleInclude Source="avares://Avalonia.Themes.Fluent/FluentTheme.xaml" />
    <Style Selector="TextBlock">
      <Setter Property="FontFamily" Value="Segoe UI, Helvetica, Arial"/>
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="Foreground" Value="#EAEAEA"/>
    </Style>

    <Style Selector="Window">
      <Setter Property="Background" Value="#07070A"/>
    </Style>

    <!-- Focus visual: use Control focus adorner via style for controls -->
    <Style Selector="Button:focus, TextBox:focus, ComboBox:focus">
      <Setter Property="BorderBrush" Value="#5FB0FF" />
      <Setter Property="BorderThickness" Value="1" />
    </Style>
  <!-- DataGrid theme removed (not referenced) -->
  </Application.Styles>
</Application>
